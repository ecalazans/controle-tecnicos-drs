            </option>
            <option value="III" {% if member.regional == "III" %}selected{% endif %}>
                DRS III
            </option>
            <option value="IV" {% if member.regional == "IV" %}selected{% endif %}>
                DRS IV
            </option>
            <option value="V" {% if member.regional == "V" %}selected{% endif %}>
                DRS V
            </option>
            <option value="VI" {% if member.regional == "VI" %}selected{% endif %}>
                DRS VI
            </option>
            <option value="VII" {% if member.regional == "VII" %}selected{% endif %}>
                DRS VII
            </option>
            <option value="VIII" {% if member.regional == "VIII" %}selected{% endif %}>
                DRS VIII
            </option>
            <option value="IX" {% if member.regional == "IX" %}selected{% endif %}>
                DRS IX
            </option>
            <option value="X" {% if member.regional == "X" %}selected{% endif %}>
                DRS X
            </option>
            <option value="XI" {% if member.regional == "XI" %}selected{% endif %}>
                DRS XI
            </option>
            <option value="XII" {% if member.regional == "XII" %}selected{% endif %}>
                DRS XII
            </option>
            <option value="XIII" {% if member.regional == "XIII" %}selected{% endif %}>
