<div class="item">
    <div>Representante Local do DRS</div>
    <div>
        <select name="contact_tec">
        {% for contact in contactOptions %}
            <option value="{{ contact.id }}" {% if member.contact_id == contact.id %}selected{% endif %}>
                {{ contact.name }}
            </option>
        {% endfor %}
        </select>
    </div>
</div>

<button type="submit">Salvar</button>